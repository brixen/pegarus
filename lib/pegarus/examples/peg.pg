grammar     = (nonterminal '=' sp pattern)+
pattern     = alternative ('/' sp alternative)*
alternative = ([!&]? sp suffix)+
suffix      = primary ([*+?] sp)*
primary     = '(' sp pattern ')' sp / '.' sp / literal /
              char_class / nonterminal !'='
literal     = ['] (!['] .)* ['] sp
char_class  = '[' (!']' (. '-' . / .))* ']' sp
nonterminal = [_a-zA-Z]+ sp
sp          = [ \t\n]*
